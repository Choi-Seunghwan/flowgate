# EditorConfig: https://editorconfig.org

root = true

# 모든 파일 기본 설정
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Java 파일
[*.java]
indent_style = space
indent_size = 4
continuation_indent_size = 8
max_line_length = 120

# YAML 파일
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Gradle 파일
[*.gradle]
indent_style = tab
indent_size = 2

# Markdown 파일
[*.md]
trim_trailing_whitespace = false
max_line_length = off
